{
  "manifest_version": 2,
  "name": "Better New Tab",
  "version": "1.0",
  "description": "A terminal-styled new tab with search and weather",
  "permissions": [
    "storage"
  ],
  "chrome_url_overrides": {
    "newtab": "newtab.html"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "better-new-tab@example.com"
    }
  },
  "homepage_url": "newtab.html",
  "icons": {
    "48": "./icons/icon48.png",
    "128": "./icons/icon128.png"
  }
}
